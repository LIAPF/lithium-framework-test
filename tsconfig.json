{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@lithium": ["./app/config/main.ts"],
      "@components/*": ["./app/shared/components/*"],
      "@core/*": ["./app/core/*"],
      "@modules/*": ["./app/modules/*"]
    }
  },
  "include": ["src", "src/main.ts"],

}
